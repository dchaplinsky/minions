{% extends "base.jinja" %}
{% from "_results.jinja" import render_minions_table %}
{% block title %}: {{ mp.name }}, помічники народного депутата України {% if mp.party %}від партії {{ mp.party }}{% endif %}{% endblock%}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <h2 class="text-center">{{ mp.name }}</h2>
        <table class="table minions-table">
            <tr>
                <th>Скликання</th>
                <td>{{ mp.convocation_id }}</td>
            </tr>
            {% if mp.party %}
            <tr>
                <th>Партія</th>
                <td>{{ mp.party }}</td>
            </tr>
            {% endif %}

            {% if mp.district %}
            <tr>
                <th>Округ</th>
                <td>{{ mp.district }}</td>
            </tr>
            {% endif %}

            {% if mp.date_from or mp.date_to %}
            <tr>
                <th>Дати</th>
                <td>{% if mp.date_from|date %}з {{ mp.date_from }}{% endif %} {% if mp.date_to %}по {{ mp.date_to }}{% endif %}</td>
            </tr>
            {% endif %}

            {% if mp.link %}
            <tr>
                <td colspan="2"><a href="{{ mp.link }}" target="_blank">Читати докладніше на Вікіпедії</a></td>
            </tr>
            {% endif %}
        </table>
    </div><!-- /.col-lg-4 -->
</div><!-- /.row -->

<div class="row">
    <h3 class="text-center">Помічники</h3>
    <table class="table minions-table">
        {{ render_minions_table(mp.minion_set.all()) }}
    </table>
</div><!-- /.row -->
{% endblock %}
